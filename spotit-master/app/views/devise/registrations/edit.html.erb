<div class="background-grey">
  <div class="container">
    <div class="row">
      <div class="col-sm-5 col-sm-offset-1">
        <div class="margin-form">
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= f.error_notification %>

            <div class="form-inputs">
              <%= f.input :email, required: true, autofocus: true %>
              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
              <% end %>
              <% if current_user.provider != 'facebook' %>
                <%= f.input :password, autocomplete: "off", hint: "Write here your new password", required: false %>
                <%= f.input :password_confirmation, required: false %>
                <%= f.input :current_password, hint: "Needed to confirm your changes 'Por Favor!'", required: true %>
                <% end %>
            </div>

            <div class="form-actions">
              <%= f.button :submit, "Update" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<p class="text-center">Unhappy? Wanna be forgotten forever? <%= link_to "Delete my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back, { :class=>"btn btn-primary back-btn" } %>
