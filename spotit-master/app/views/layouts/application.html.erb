<!DOCTYPE html>
<html>
  <head>
    <title>Spot it - find the perfect place for your shootings</title>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Niconne' rel='stylesheet' type='text/css'>
  </head>
  <body>
    <% if content_for? :nav %>
      <%= content_for :nav %>
    <% else %>
      <%= render '/shared/navbar' %>
      <div id="flash" style="z-index: 10;">
        <%= render '/shared/flashes' %>
      </div>
    <% end %>


    <%= yield %>

    <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?sensor=false&libraries=places&key=AIzaSyBlxWUuL1MjpZemwlaO31HpxNkLUUsJHIQ"></script>

    <script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>
    <%= javascript_include_tag 'application' %>

    <%= yield(:after_js) %>

    <%= javascript_tag do %>
      $(document).ready(function(){
        setTimeout(function(){
          $('#flash').fadeOut('slow');
        }, 2000);
       })
     <% end %>

  </body>
</html>
