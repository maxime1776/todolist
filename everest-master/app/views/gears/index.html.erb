<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-offset-3 col-sm-6">
      <%= form_tag gears_path, method: :get do %>
      <div class="search">
        <div class="row">
          <div class="col-xs-12 col-sm-9">
            <%= text_field_tag :city, nil, placeholder: 'City', class:"form-control" %>
          </div>
          <div class="col-xs-12 col-sm-2">
            <%= submit_tag "Search", class:"btn btn-everest" %>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12">
      <!-- MAP -->
    </div>
    <% @gears.each do |gear| %>
      <div class="col-xs-12 col-sm-4">
        <!-- div class="card" -->
        <div class="card">
          <span class="card-bg" style="background-image:url('<%=gear.picture.url(:large)%>')"></span>
          <span class="card-gradient"></span>
          <span class="card-category">
            <%=gear.sport%>
          </span>
          <span class="card-text">
            <h2><%= gear.title %></h2>
            <%unless rating_average(gear).nan? %>
              <p>
                <% rating_average(gear).to_i.times do %>
                <i class="fa fa-star yellow"></i>
              <% end %>
                <span><%= rating_average(gear) %></span>
              </p>
            <% end %>

          </span>
          <span class="card-price">
            <%= gear.price %>â‚¬/day
          </span>
          <span class="card-user">
            <% if gear.user.picture %>
              <%= image_tag gear.user.picture.url(:square), class: "avatar avatar-bordered" %>
            <% end %>
          </span>
          <%= link_to "", gear_path(gear), class:"card-link"%>
        </div>
      </div>
    <% end %>
  </div>
</div>
